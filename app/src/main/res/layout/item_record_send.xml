<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textColor="@color/base_list_text_gray"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="end"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_fail"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_send_failed"
                android:visibility="invisible" />

            <com.qmuiteam.qmui.widget.QMUILoadingView
                android:id="@+id/img_loading"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:color="@color/blue_base" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_play_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="9dp"
                android:gravity="center_vertical"
                android:background="@drawable/right_text_bg">

                <TextView
                    android:id="@+id/tv_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:paddingVertical="10dp"
                    android:includeFontPadding="true"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    tools:text="2â€œ" />

                <ImageView
                    android:id="@+id/iv_play"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_record_send"
                    android:layout_marginEnd="15dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>


        </LinearLayout>

        <ImageView
            android:id="@+id/img_person"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="21dp"
            android:src="@drawable/ic_header_send" />
    </LinearLayout>
</LinearLayout>
