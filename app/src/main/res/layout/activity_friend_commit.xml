<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_view_bg">

    <include layout="@layout/head_title_view" />

    <TextView
        android:id="@+id/tv_tel"
        style="@style/friend_commit_tv"
        android:text="请输入手机号"
        android:textColor="@color/base_list_text_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cons_head" />

    <EditText
        android:id="@+id/edit_tel"
        style="@style/friend_commit_edit"
        android:background="@drawable/white_8"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tel" />

    <TextView
        android:id="@+id/tv_text"
        style="@style/friend_commit_tv"
        android:text="发送添加朋友申请"
        android:textColor="@color/base_list_text_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_tel" />

    <EditText
        android:id="@+id/edit_text"
        style="@style/friend_commit_edit"
        android:layout_height="100dp"
        android:background="@drawable/white_8"
        android:gravity="left"
        android:maxLength="60"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_text" />

    <TextView
        android:id="@+id/tv_backup"
        style="@style/friend_commit_tv"
        android:text="设置备注"
        android:textColor="@color/base_list_text_gray"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text" />

    <EditText
        android:id="@+id/edit_backup"
        style="@style/friend_commit_edit"
        android:background="@drawable/white_8"
        android:padding="5dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_backup" />

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/login_btn_bg_blue"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".91" />
</androidx.constraintlayout.widget.ConstraintLayout>